{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "requireCleanWorkingDir": false,
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "push": true
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "publishConfig": {
      "registry": "https://npm.pkg.github.com"
    }
  },
  "hooks": {
    "before:init": ["git fetch --tags"]
  }
}
