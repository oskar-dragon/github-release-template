{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "github": {
    "release": true,
    "web": true,
    "autoGenerate": true
  },
  "git": {
    "requireCleanWorkingDir": false,
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "push": true
  },
  "npm": {
    "ignoreVersion": true,
    "publishConfig": {
      "registry": "https://npm.pkg.github.com"
    }
  }
}
